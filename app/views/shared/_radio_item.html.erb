<div class="govuk-radios__item">
  <%= radio_button_tag(list.name, item.value, false, class: "govuk-radios__input") %>
  <%= label_tag("#{list.name}_#{item.value}", item.text, class: "govuk-label govuk-radios__label govuk-label--s") %>
  <% if item.hint.present? %>
    <span class="govuk-hint govuk-radios__hint"><%= item.hint %></span>
  <% end %>
</div>