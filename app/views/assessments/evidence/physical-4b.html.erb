<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_tag("#{request.fullpath}", method: "post") do %>
      <div class="govuk-form-group">
        <fieldset class="govuk-fieldset" id='physical_check'>
          <legend class="govuk-fieldset__legend">
            <div class="govuk-caption-l">Evidence validity</div >
            <h1 class="fieldset__heading">
              How often are the official templates updated?
            </h1>
          </legend>
          <div class="govuk-radios">
            <% template_update_frequency = @form.lists['template_update_frequency'] %>
            <% ['12_months', '36_months'].each do |f| %>
              <%= render 'shared/radio_item', name: :official_templates_update_frequency, item: template_update_frequency.items[f] %>
            <% end %>
            <p> or </p>
            <%= render 'shared/radio_item', name: :official_templates_update_frequency, item: template_update_frequency.items['none'] %>
          </div>
        </fieldset>
      </div>
      <%= submit_tag("Continue", class: "govuk-button") %>
    <% end %>
  </div>
</div>