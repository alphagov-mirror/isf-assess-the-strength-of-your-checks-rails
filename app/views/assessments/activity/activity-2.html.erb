<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_tag("#{request.fullpath}", method: "post") do %>
      <div class="govuk-form-group">
        <fieldset class="govuk-fieldset">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <div class="govuk-caption-l">Activity checks</div >
            <h1 class="govuk-fieldset__heading">
              How far back are you able to get interaction history from the organisation?
            </h1>
          </legend>
          <div class="govuk-radios">
            <% @form.lists['activity_time_period'].items.each do |key, item| %>
              <%= render 'shared/radio_item', name: :activity_time_period, item: item %>
            <% end %>
          </div>
        </fieldset>
      </div>
      <%= submit_tag("Continue", class: "govuk-button") %>
    <% end %>
  </div>
</div>
